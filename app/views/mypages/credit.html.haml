.mypage-container
  = render 'mypages/mypage-header'
  - breadcrumb :mypage_credit
  = render 'mypages/bread-crumbs'
%main.container
  = render 'shared/side_bar'
  .credit-main
    %section.credit-all
      %h2.credit-head
        支払い方法
      .credit-content
        %section
          .credit-list
            %h3.credit-child
              クレジット一覧
            %ul.credit-name
        .credit-btn
          .credit-in
            %button.btn-credit{type: "submit"}
              = link_to new_card_path, class: "btn-credit" do       
                クレジットカードを追加する
                = fa_icon 'credit-card', class: "credit-icon"
        .credit-pay
          = link_to "支払い方法について", "#" , class: "payment"
          = link_to new_card_path do
            = fa_icon 'chevron-right', class: 'icon'

= render 'shared/banner'
= render 'shared/footer'

