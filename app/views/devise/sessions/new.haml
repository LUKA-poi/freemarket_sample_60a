.content_2.all-container
  / viewの全てを囲む
  %header.header-login
    %h1
      = link_to '#', class: "link", target: "_blank" do
        = image_tag 'merukari.svg',class: "login-mercari"
  %main.main-view-container
    .main-view
      %h2.sub-header 新規会員登録
      %form.l-single-inner.registration-form
        .l-single-content
          .form-create
            .last-content
              
              %button.next-page-red{type: "submit"} 
                = link_to "メールアドレスで登録する", step1_signup_index_path                                              
              
              %button.next-page-blue{type: "submit"} 
                = link_to "Facebookで登録する", user_facebook_omniauth_authorize_path, method: :post                                
            
              %button.next-page-black{type: "submit"} 
                = link_to "Googleで登録する", user_google_oauth2_omniauth_authorize_path, method: :post 

= render 'shared/fotter'

