%body
  %header
    .top-container
      .top-center
        .home-icon
          =link_to "#" do
            = image_tag 'tatara.png', alt: 'fmarket_icon', height: '36px', width: '136px'
        %form.info-searches{action: "#"}
          %input.info-search{name: "keyword", placeholder: "何かお探しですか？", type: "search", value: ""}/
