.all-container
  / viewの全てを囲む
  %header.header
    %h1
      = link_to '#', class: "link", target: "_blank" do
        = image_tag 'merukari.svg'    
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li.active
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status   

  %main.main-view-container
    .main-view
      %h2.sub-header お届け先住所入力
      -# %form.l-single-inner.registration-form
      = form_for @user, url: signup_index_path, method: :post, html: {class: 'first-main__box'} do |f|
        .l-single-content
          .form-create
            .form-index
              %label{for: "nickname"} お名前
              %span.need-select 必須
              .input-default 
                = f.text_field :last_name, { class: 'half half-one', placeholder: '例) 山田', value: "" }
              .input-default
                = f.text_field :first_name, {class: 'half half-one', placeholder: '例) 彩', value: "" }
            .form-index
              %label{for: "nickname"} お名前カナ
              %span.need-select 必須
              .input-default
                = f.text_field :last_name_kana, {class: 'half half-one', placeholder: '例) ヤマダ', value: "" }
              .input-default
                = f.text_field :first_name_kana, {class: 'half half-one', placeholder: '例) アヤ', value: "" }
            .form-index
              %label{for: "nickname"} 郵便番号
              %span.need-select 必須
              .input-default
                = f.text_field :postal_code, {class: 'half half-one', placeholder: '例) 123-4567', maxlength: '8', pattern: '\d{3}-\d{4}', value: '' }
            .form-index
              %label{for: "nickname"} 都道府県
              %span.need-select 必須
              .input-default
                = f.text_field :prefectures, {class: 'half half-one', placeholder: '例) 横浜市緑区', value: '' }
            .form-index
              %label{for: "nickname"} 建物名
              %span.need-select-free 任意
              .input-default
                = f.text_field :buildingname, {class: 'half half-one', placeholder: '例) 柳ビル103', value: ""}
            .form-index
              %label{for: "nickname"} 電話
              %span.need-select-free 任意
              .input-default
                = f.text_field :tell, {class: 'half half-one', placeholder: '例) 09012345678', maxlength: '11', pattern: '(070|080|090)\d{4}\d{4}',  value: ""}
            
            .last-content
              / 次へ進むボタンを作成
              = f.submit class: 'next-page'      
= render 'shared/fotter'