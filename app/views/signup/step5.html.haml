.all-container
  / viewの全てを囲む
  %header.header
    %h1
      = link_to '#', class: "link", target: "_blank" do
        = image_tag 'merukari.svg'
      
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.main-view-container
    .main-view
      %h2.sub-header 支払い方法
      -# %form.registration-form.inner-register-form
      = form_for @user, url: signup_index_path, method: :post, html: {class: 'first-main__box'} do |f|
        .form-create
          .form-index
            %label{for: "mickname"} カード番号
            %span.need-select 必須
            -# %input.input-default
            .input-default
              = f.text_field :credit_card_no, class: 'half half-one2', placeholder: "  半角数字のみ", value: ""
          .signup-cards
            %ul.signup-card-list
              %li
              = image_tag 'visa.svg', height: '20px',width: '49px'
              %li.img-credit
                = image_tag 'master-card.svg' , height: '20px' ,width: '34px'
              %li.img-credit
                = image_tag 'saison-card.svg'  , height: '20px',width: '30px'
              %li.img-credit
                = image_tag 'jcb.svg' , height: '20px',width: '32px'
              %li.img-credit
                = image_tag 'american_express.svg'  , height: '20px',width: '21px'
              %li.img-credit
                = image_tag 'dinersclub.svg' , height: '20px',width: '32px'
              %li.img-credit
                = image_tag 'discover.svg' , height: '20px',width: '32px'
                
          .form-index-ex
            %label.birthday-sp{for: "birthday"} 有効期限
            %span.need-select-sp 必須
            .border
              .select-wrap-2
                %i.icon-arrow-bottom
                  / ::beforeがよく分からず放置
                / select-defaultでクラスを統一しています
                -# %select.select-default-2{"aria-invalid" => "false", name: "month"}
