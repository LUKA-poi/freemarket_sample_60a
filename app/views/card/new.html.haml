%main.main-view-container
  .main-view
    %h2.sub-header 支払い方法
    = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class: 'first-main__box') do |f|
      .form-create
        .form-index
          %label{for: "mickname"} カード番号
          %span.need-select 必須
          .input-default
            = text_field_tag "number", "", class: "half half-one2", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number", value: ""
        .signup-cards
          %ul.signup-card-list
            %li
            = image_tag 'visa.svg', height: '20px',width: '49px'
            %li.img-credit
              = image_tag 'master-card.svg' , height: '20px' ,width: '34px'
            %li.img-credit
              = image_tag 'saison-card.svg'  , height: '20px',width: '30px'
            %li.img-credit
              = image_tag 'jcb.svg' , height: '20px',width: '32px'
            %li.img-credit
              = image_tag 'american_express.svg'  , height: '20px',width: '21px'
            %li.img-credit
              = image_tag 'dinersclub.svg' , height: '20px',width: '32px'
            %li.img-credit
              = image_tag 'discover.svg' , height: '20px',width: '32px'
              
        .form-index-ex
          %label.birthday-sp{for: "birthday"} 有効期限
          %span.need-select-sp 必須
          .border
            .select-wrap-2
              %i.icon-arrow-bottom
              %select#exp_month{class:'select-default-2', name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}1
                %option{value: "2"}2
                %option{value: "3"}3
                %option{value: "4"}4
                %option{value: "5"}5
                %option{value: "6"}6
                %option{value: "7"}7
                %option{value: "8"}8
                %option{value: "9"}9
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月/
            .select-wrap-2
              %i.icon-arrow-bottom
              %select#exp_year{class:'select-default-2', name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}2019
                %option{value: "2020"}2020
                %option{value: "2021"}2021
                %option{value: "2022"}2022
                %option{value: "2023"}2023
                %option{value: "2024"}2024
                %option{value: "2025"}2025
                %option{value: "2026"}2026
                %option{value: "2027"}2027
                %option{value: "2028"}2028
                %option{value: "2029"}2029
              %span 年
        .form-index
          %label{for: "mickname"} セキュリティコード
          %span.need-select 必須
          .input-default
            = text_field_tag "credit_card_security_code", "", class: "half half-one2", placeholder: "カード背面４桁もしくは３桁の番号", maxlength: "4", id: "cvc"
        -#     = f.text_field :credit_card_security_code, class: 'half half-one2', id: 'cvc', placeholder: "カード背面４桁もしくは３桁の番号", value: ""
        %a.right-messages
          = link_to 'カード裏面の番号とは？', "#", class: "right-messages"
        .last-content
          / 次へ進むボタンを作成
          #card_token
          = submit_tag "追加する", id: "token_submit", class: 'next-page'
=render 'shared/footer'